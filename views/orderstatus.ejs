<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders</title>
    <link rel="stylesheet" href="/styles/orderstatus.css">
   
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo">Foodie</div>
            <ul class="nav-links">
                <li><a href="/food-home">Home</a></li>
                <li><a href="/menu">Menu</a></li>
                <li><a href="/orderstatus">My Orders</a></li>
                <li><a href="/contact">Contact</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <h1>My Orders</h1>
        <section class="order-list">
            <% if (orders.length > 0) { %>
                <% orders.forEach(function(order) { %>
                    <div class="order-item">
                        <!-- Food Image -->
                        <img src="<%= order.food.image %>" alt="<%= order.food.foodname %>" class="order-item-img">
        
                        <!-- Food Details -->
                        <h3><%= order.food.foodname %></h3>
                        <p>Status: <%= order.status %></p>
                        <p>Quantity: <span class="order-quantity"><%= order.qty %></span></p>
                        <p>Price per item: $<%= order.food.price %></p>
                        <p>Total Price: <span class="order-total">â‚¹<%= (order.food.price * order.qty).toFixed(2) %></span></p>
                        <p>Description: <%= order.food.description %></p>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No orders placed yet.</p>
            <% } %>
        </section>
        
    </main>
</body>
</html>
